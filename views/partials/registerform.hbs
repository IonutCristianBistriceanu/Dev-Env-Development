<form id="register-user-form" class="mt-5">
  <div class="form-group">
    <label for="register-email">Email address</label>
    <input type="email" class="form-control" id="register-email" name="email" aria-describedby="emailHelp" placeholder="Enter email" required>
  </div>
  <div class="form-group">
    <label for="register-password">Password</label>
    <input type="password" class="form-control" pattern=".{6,10}" id="register-password" aria-describedby="password-help" name="password" placeholder="Password" required>
    <small id="password-help" class="form-text text-muted">Passwords must be 6 characters long minimum.</small>
  </div>
  <button type="submit" id="register-user-form-btn" class="btn btn-primary">Register</button>
</form>